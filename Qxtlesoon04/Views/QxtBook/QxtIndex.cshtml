@model IEnumerable<Qxtlesoon04.Models.QxtBook>
@{
    ViewData["Title"] = "QxtIndex";
}

<h1>Thong tin cac cuon sach </h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th>Pages</th>
            <th>Price ($)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (QxtBook qxtIteem in Model)
        {
            <tr>
                <td>
                   @qxtIteem.QxtId
                </td>
                <td>@qxtIteem.QxtTitle</td>
                <td>@qxtIteem.QxtDescription</td>
                <td>
                    <img src="@Url.Content("~/images/" + qxtIteem.QxtImage)" alt="@qxtIteem.QxtTitle" style="width:100px; height:150px;" />

                </td>
                <td> @qxtIteem.QxtImage</td>
                <td>@qxtIteem.QxtPrice</td>
            </tr>
        }
    </tbody>
</table>
